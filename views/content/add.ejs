<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Name"
                    name="name" value="" required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">Location</label>
                    <input type="text" class="form-control"
                    id="authorTextField"
                    placeholder="Enter the location"
                    name="location" value="" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Price</label>
                    <input type="text" class="form-control"
                    id="publishedTextField"
                    placeholder="Enter the price"
                    name="price" value="" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Size</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the size"
                    name="size" value="" required></textarea>
                </div>

                
                <div class="form-group">
                    <label for="descriptionTextArea">Address</label>
                    <input type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the address"
                    name="address" value="" required></textarea>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Image</label>
                    <input type="file" name="myImage" accept="image/*" id="file-input">
                </textarea>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the description"
                    name="description" value="" required></textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/locker" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>